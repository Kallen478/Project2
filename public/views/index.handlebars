<h1 style="font-family: 'Times New Roman', Times, serif; color:white; text-align:center">View Your Invoices</h1>

<div class="row">
    <div class="col-md-5">
        <h4>Invoices</h4>
        <ul class="list-group">
            {{#each invoices}}
            {{#unless this.paid}}
            <li class="list-group-item">
                <div class="input-group">
                    <p> {{this.invoice_number}} </p>
                    <span class="input-group-btn">
                        <form action="/{{this.id}}" method="POST">
                            <input type="hidden" name="paid" value="true">
                        </form>
                    </span>
                </div>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

  